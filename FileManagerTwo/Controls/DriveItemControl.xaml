<UserControl x:Class="FileManagerTwo.DriveItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FileManagerTwo"
             mc:Ignorable="d" >
    
    <StackPanel>

            <!-- Drive image -->
            <Image Source="{Binding DriveType, Converter={StaticResource DrivetypeToImageConverter}}"
                   Style="{StaticResource BasicImageStyle}" 
                   Height="30"
                   />

            <!-- Drive file system -->
            <TextBlock Style="{StaticResource BasicTextblock}"
                       FontSize="14"
                       FontWeight="Light"
                       Text="{Binding Name}"
                       HorizontalAlignment="Center"/>


        </StackPanel>
</UserControl>
